<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textview_event_see_image_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请选择如下图形："
        android:textSize="20dip" />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/textview_event_see_image_red"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@color/red"
            android:layout_weight="1"/>
        <TextView 
            android:id="@+id/textview_event_see_image_green"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@color/green"
            android:layout_weight="1"/>
        <TextView 
            android:id="@+id/textview_event_see_image_blue"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@color/blue"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/textview_event_see_image_rad"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@drawable/rat"
            android:layout_weight="1"/>
        <TextView 
            android:id="@+id/textview_event_see_image_elephant"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@drawable/elephant"
            android:layout_weight="1"/>
        <TextView 
            android:id="@+id/textview_event_see_image_tiger"
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:background="@drawable/tiger"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>