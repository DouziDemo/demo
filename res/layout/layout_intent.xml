<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_intent_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过Intent跳转到另一个Activity" />
    
    <Button
        android:id="@+id/button_intent_filter_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过IntentFilter跳转到另一个Activity" />
    
    <Button
        android:id="@+id/button_intent_filter_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过IntentFilter调用打电话界面" />
    
    <Button
        android:id="@+id/button_intent_filter_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通过IntentFilter调用拨号界面" />

</LinearLayout>