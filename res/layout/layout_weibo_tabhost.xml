<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.0"
                android:visibility="gone" ></TabWidget>

                <RadioGroup
                    android:id="@+id/main_radio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/maintab_toolbar_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radio_button0"
                        style="@style/main_tab_bottom"
                        android:layout_marginTop="2.0dip"
                        android:drawableTop="@drawable/icon_1"
                        android:tag="radio_button0"
                        android:text="好友" 
                        />

                    <RadioButton
                        android:id="@+id/radio_button1"
                        style="@style/main_tab_bottom"
                        android:layout_marginTop="2.0dip"
                        android:drawableTop="@drawable/icon_2"
                        android:tag="radio_button1"
                        android:text="广场" 
                        />

                    <RadioButton
                        android:id="@+id/radio_button2"
                        style="@style/main_tab_bottom"
                        android:layout_marginTop="2.0dip"
                        android:drawableTop="@drawable/icon_3"
                        android:tag="radio_button2"
                        android:text="首页" 
                        />

                    <RadioButton
                        android:id="@+id/radio_button3"
                        style="@style/main_tab_bottom"
                        android:layout_marginTop="2.0dip"
                        android:drawableTop="@drawable/icon_4"
                        android:tag="radio_button3"
                        android:text="消息" 
                        />

                    <RadioButton
                        android:id="@+id/radio_button4"
                        style="@style/main_tab_bottom"
                        android:layout_marginTop="2.0dip"
                        android:drawableTop="@drawable/icon_5"
                        android:tag="radio_button4"
                        android:text="更多"
                        />
                </RadioGroup>
            
    </LinearLayout>

</TabHost>